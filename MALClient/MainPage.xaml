<Page
    x:Class="MALClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MALClient"
    xmlns:controls="using:MALClient.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xamlConverters="using:MALClient.XamlConverters"
    DataContext="{Binding Main ,Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Page.Resources>
        <xamlConverters:VisiblityInverterConverter x:Key="VisiblityInverterConverter" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0"
              Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Button HorizontalAlignment="Left" FontWeight="Bold" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="45" Height="45" Background="Transparent" FontSize="20"
                    Foreground="{StaticResource SystemControlBackgroundAccentBrush}" Click="ReversePane" />
            <TextBlock x:Name="CurrentStatus" Grid.Column="1" FontWeight="Bold" Text="" VerticalAlignment="Center"
                       Visibility="{Binding ElementName=SearchInput , Path=Visibility , Converter={StaticResource VisiblityInverterConverter}}" />
            <TextBox x:Name="SearchInput" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                     Visibility="Collapsed" TextChanged="SearchQuerySubmitted" KeyDown="SearchInput_OnKeyDown"
                     PlaceholderText="Search..." />
            <ToggleButton x:Name="SearchToggle" HorizontalAlignment="Right" IsThreeState="False"
                          VerticalAlignment="Center" Width="45" Height="48" Grid.Column="2" Background="Transparent"
                          Click="ReverseSearchInput">
                <SymbolIcon Symbol="Find" />
            </ToggleButton>
        </Grid>
        <SplitView x:Name="MainMenu" VerticalAlignment="Stretch" CompactPaneLength="0" OpenPaneLength="200"
                   IsPaneOpen="{Binding MenuPaneState}" DisplayMode="CompactOverlay" Grid.Row="1">
            <SplitView.Pane>
                <controls:HamburgerControl x:Name="HamburgerControl" />
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:Name="MainContent" />
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>