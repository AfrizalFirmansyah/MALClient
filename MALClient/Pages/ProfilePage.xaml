                                <charting:SeriesDefinition x:Name="SeriesMCompleted" DependentValuePath="Value" IndependentValuePath="Key"></charting:SeriesDefinition>
                                <charting:SeriesDefinition x:Name="SeriesMOnHold" DependentValuePath="Value" IndependentValuePath="Key"></charting:SeriesDefinition>
                                <charting:SeriesDefinition x:Name="SeriesMDropped" DependentValuePath="Value" IndependentValuePath="Key"></charting:SeriesDefinition>
                                <charting:SeriesDefinition x:Name="SeriesMPlanned" DependentValuePath="Value" IndependentValuePath="Key"></charting:SeriesDefinition>
