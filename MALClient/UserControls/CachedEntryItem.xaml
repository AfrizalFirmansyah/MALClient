<UserControl
    x:Class="MALClient.UserControls.CachedEntryItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MALClient.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="Auto" MaxWidth="150" MinWidth="100"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="TxtUser" VerticalAlignment="Center" Grid.Column="0" TextWrapping="WrapWholeWords" FontWeight="Medium"/>
        <TextBlock x:Name="TxtSize" VerticalAlignment="Center" Grid.Column="1"/>
        <TextBlock x:Name="TxtDate" VerticalAlignment="Center" Grid.Column="2" TextWrapping="WrapWholeWords" Margin="0,0,5,0"/>
        <Button Grid.Column="3" Click="DeleteFile">
            <SymbolIcon Symbol="Delete"/>
        </Button>
    </Grid>
</UserControl>
