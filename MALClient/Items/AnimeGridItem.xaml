<UserControl
    x:Class="MALClient.Items.AnimeGridItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MALClient.Items"
    xmlns:converters="using:MALClient.XamlConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:IsThereAnyTextToVisibilityConverter x:Key="AnyTextToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Grid.ColumnSpan="2" Stretch="UniformToFill" Source="{Binding Image}" MaxWidth="{Binding MaxWidth}" />
        <Grid Grid.Row="0" Width="37" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="{Binding Auth,Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity=".75"/>
            </Grid.Background>
            <StackPanel Margin="1">
                <TextBlock Text="{Binding MyStatusBindShort}" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding MyEpisodesBindShort}" Foreground="White" FontWeight="SemiLight" HorizontalAlignment="Center"/>
                <MenuFlyoutSeparator Background="LightGray" />
                <TextBlock Text="{Binding MyScoreBindShort}" Foreground="White" FontWeight="SemiLight" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="0" Width="45" HorizontalAlignment="Left" VerticalAlignment="Top" 
              Visibility="{Binding AirDayBind,Converter={StaticResource AnyTextToVisibilityConverter}}">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity=".75"/>
            </Grid.Background>
            <TextBlock Text="{Binding AirDayBind}" FontWeight="SemiLight" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" Margin="1"
                                   Foreground="White" FontSize="20" />
        </Grid>
        <Grid Grid.Row="1" BorderBrush="{StaticResource SystemControlBackgroundAccentBrush}" BorderThickness="0,1.5,0,0"
              MaxWidth="{Binding MaxWidth}" VerticalAlignment="Stretch" Background="{ThemeResource BrushAnimeItemBackground}">
            <TextBlock Text="{Binding Title}" Margin="2" Height="Auto" FontWeight="SemiBold"
                       TextWrapping ="WrapWholeWords"  TextTrimming="CharacterEllipsis"/>
        </Grid>
        <Button Grid.Row="0"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="40"
                Visibility="Visible" RenderTransformOrigin="0.5,0.5" >
            <SymbolIcon Symbol="More" RenderTransformOrigin="0.5,0.5"
                            Foreground="WhiteSmoke">
            </SymbolIcon>
            <Button.Background>
                <SolidColorBrush Color="Black" Opacity=".75"/>
            </Button.Background>
            <Button.Flyout>
                <Flyout x:Name="FlyoutMore">
                    <StackPanel Padding="0">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Height" Value="35"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Margin" Value="1"></Setter>
                            </Style>
                        </StackPanel.Resources>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <SymbolIcon Symbol="World" VerticalAlignment="Center"/>
                            <StackPanel HorizontalAlignment="Left">
                                <Button  Content="Copy url to clipboard" Command="{Binding CopyLinkToClipboardCommand}" />
                                <Button Content="Open in browser" Command="{Binding OpenInMALCommand}" />
                            </StackPanel>
                        </StackPanel>
                        <MenuFlyoutSeparator/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                            <SymbolIcon Symbol="Pin" VerticalAlignment="Center"/>
                            <StackPanel HorizontalAlignment="Left">
                                <Button Content="Pin with MAL url" Command="{Binding PinTileMALCommand}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>
    </Grid>
</UserControl>
