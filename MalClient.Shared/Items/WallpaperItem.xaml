<UserControl
    x:Class="MALClient.Shared.Items.WallpaperItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MALClient.Shared.Items"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:items="using:MALClient.XShared.ViewModels.Items"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:imgExt="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:xamlConverters="using:MALClient.Shared.XamlConverters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" d:DataContext="{d:DesignInstance items:WallpaperItemViewModel}">

    <UserControl.Resources>
        <xamlConverters:BoolToWallpaperBlurValueConverter x:Key="BoolToWallpaperBlurValueConverter" />
    </UserControl.Resources>
    
    <Grid Background="{StaticResource BrushAnimeItemInnerBackground}" PointerPressed="UIElement_OnPointerPressed" RightTapped="WallpaperOnRightTapped" Holding="WallpaperOnHolding" IsRightTapEnabled="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <FlyoutBase.AttachedFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Text="Save" Command="{Binding SaveCommand}"/>
                <MenuFlyoutItem Text="Save as" Command="{Binding SaveAsCommand}"/>
                <MenuFlyoutItem Text="Copy link and open waifu2x" Command="{Binding CopyAndWaifuCommand}"/>
                <MenuFlyoutItem Text="Open on reddit" Command="{Binding OpenRedditCommand}"/>
                <MenuFlyoutItem Text="Copy link" Command="{Binding CopyLinkCommand}"/>
            </MenuFlyout>
        </FlyoutBase.AttachedFlyout>
        <Grid SizeChanged="FrameworkElement_OnSizeChanged" MinHeight="60">
            <Image imgExt:ImageExtensions.FadeInOnLoaded="True" Grid.Row="0" x:Name="Image" IsHoldingEnabled="True" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Image.Source>
                    <BitmapImage x:Name="Bitmap" UriSource="{Binding Data.FileUrl}" DecodePixelType="Logical" DecodePixelHeight="720" DecodePixelWidth="1280" DownloadProgress="Bitmap_OnDownloadProgress" ImageOpened="Bitmap_OnImageOpened"/>
                </Image.Source>
            </Image>
            <StackPanel x:Name="ImgLoading" VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressRing Width="25"  Height="25" Foreground="{ThemeResource BrushNoSearchResults}" IsActive="True"/>
                <TextBlock x:Name="DlProgress" HorizontalAlignment="Center" Margin="0,5"/>
            </StackPanel>
            <Grid x:Name="BoundingGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-1,0,0,0">
                <Grid VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Grid.Background>
                        <SolidColorBrush Color="Black" Opacity=".75"/>
                    </Grid.Background>
                    <TextBlock  Margin="5" FontWeight="SemiLight">
                /r/<Run Text="{Binding Data.Source}"/>
                    </TextBlock>
                </Grid>
                <Grid x:Name="ResolutionGrid" VerticalAlignment="Bottom" HorizontalAlignment="Left" Visibility="Collapsed">
                    <Grid.Background>
                        <SolidColorBrush Color="Black" Opacity=".75"/>
                    </Grid.Background>
                    <TextBlock  Margin="5" FontWeight="SemiLight">
               <Run Text="{Binding Resolution}"/>
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>

        <Grid x:Name="DescriptionGrid" Background="{StaticResource BrushAnimeItemBackground}" Padding="0,10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Data.Title}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="10,0"/>
            <TextBlock Grid.Column="1" Text="{Binding Data.Upvotes}" Foreground="{StaticResource SystemControlBackgroundAccentBrush}" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
        </Grid>
    </Grid>
</UserControl>
