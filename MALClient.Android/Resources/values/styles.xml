<resources>
  <style name="TextViewHeaderStyle">
    <item name="android:textSize">@dimen/FontSizeNormal</item>
    <item name="android:textColor">@color/BrushText</item>
    <item name="android:layout_margin">5dp</item>
  </style>

  <style name="SelectableItemForeground">
    <item name="android:theme">@style/SelectableItemTheme</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
  </style>

  <style name="SelectableItemTheme">
    <item name="colorControlHighlight">@color/OpaqueAccentColour</item>
  </style>

  <style name="AccentColourButtonStyle">
    <item name="android:background">@color/AccentColourDark</item>
    <item name="android:fontFamily">@string/font_family_light</item>
    <item name="android:textColor">#fff</item>
    <item name="android:textSize">@dimen/FontSizeSmall</item>
    <item name="android:padding">5dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:minWidth">20dp</item>
    <item name="android:minHeight">20dp</item>
  </style>
</resources>
