<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
  <TextView android:id="@+id/RecommendationItemDetailItemType" android:layout_gravity="center_vertical"
            android:padding="5dp" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight=".2" android:text="Episodes" android:textColor="?BrushText" />
  <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight=".4"
                android:orientation="vertical">
    <TextView android:id="@+id/RecommendationItemDetailItemDepValue" android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="?BrushText"
              android:text="12" android:fontFamily="@string/font_family_light" />
    <TextView android:id="@+id/RecommendationItemDetailItemMyDepValue" android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="?AccentColour" android:text="4/12" android:fontFamily="@string/font_family_light"
              android:layout_marginTop="3dp" />
  </LinearLayout>
  <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight=".4"
                android:orientation="vertical">
    <TextView android:id="@+id/RecommendationItemDetailItemRecValue" android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="?BrushText"
              android:text="12" android:fontFamily="@string/font_family_light" />
    <TextView android:id="@+id/RecommendationItemDetailItemMyRecValue" android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="?AccentColour" android:text="4/12" android:fontFamily="@string/font_family_light"
              android:layout_marginTop="3dp" />
  </LinearLayout>
</LinearLayout>