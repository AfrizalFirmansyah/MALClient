<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@color/BrushHamburgerBackground">
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/HamburgerMenuTabStrip"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textColorPrimary="@color/AccentColour"
        android:background="@color/BrushPivotHeaderBackground"/>
    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:id="@+id/HamburgerMenuPivot"
                                       android:layout_height="wrap_content"/> 
  </LinearLayout>
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_alignParentBottom="true">
    <LinearLayout android:padding="5dp" android:id="@+id/HamburgerMenuAccountButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="?android:selectableItemBackground">
      <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_account"/>
      <TextView android:layout_width="wrap_content" android:textSize="@dimen/FontSizeMedium" android:layout_height="wrap_content" android:text="Account" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout android:padding="5dp" android:id="@+id/HamburgerMenuSettingsButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="?android:selectableItemBackground">
      <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_settings"/>
      <TextView android:layout_width="wrap_content" android:textSize="@dimen/FontSizeMedium" android:layout_height="wrap_content" android:text="Settings &amp; more" android:layout_gravity="center"/>
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>