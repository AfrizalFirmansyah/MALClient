<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="60dp" android:background="?BrushPivotHeaderBackground">
      <ImageButton android:id="@+id/RecommendationsPageTypeChangeButton" android:layout_width="45dp" android:layout_height="match_parent" android:src="@drawable/icon_swap" android:background="?android:selectableItemBackground" android:layout_gravity="center_vertical"/>
      <com.astuetz.PagerSlidingTabStrip
          android:id="@+id/RecommendationsPageTabStrip"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:textColorPrimary="?AccentColour"
          android:background="?BrushPivotHeaderBackground"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:id="@+id/RecommendationsPagePivot"/>
  </LinearLayout>
  <RelativeLayout android:id="@+id/RecommendationsPageLoading" android:layout_width="match_parent" android:layout_height="match_parent" android:background="?BrushLoading">
    <ProgressBar android:layout_width="wrap_content" android:indeterminate="true" android:indeterminateTint="?AccentColour" android:indeterminateTintMode="src_in" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
  </RelativeLayout>
</RelativeLayout>