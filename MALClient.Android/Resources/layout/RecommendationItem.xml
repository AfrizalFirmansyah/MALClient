<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?BrushDeepBackground">
  <LinearLayout android:layout_width="match_parent" android:layout_height="220dp">
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
      <FFImageLoading.Views.ImageViewAsync android:id="@+id/RecommendationItemDepImage" android:layout_width="wrap_content" android:layout_height="190dp"/>
      <TextView android:id="@+id/RecommendationItemDepTitle" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Shelter" android:textColor="?BrushText" android:textSize="@dimen/FontSizeMedium" android:padding="3dp" android:maxLines="2" android:textAlignment="center"/>
    </LinearLayout>

    <ImageView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight=".3" android:src="@drawable/icon_swap" android:layout_gravity="center_vertical"/>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
      <FFImageLoading.Views.ImageViewAsync android:id="@+id/RecommendationItemRecImage" android:layout_width="wrap_content" android:layout_height="190dp"/>
      <TextView android:id="@+id/RecommendationItemRecTitle" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Shelter" android:textColor="?BrushText" android:textSize="@dimen/FontSizeMedium" android:padding="3dp" android:maxLines="2" android:textAlignment="center"/>
    </LinearLayout>
  </LinearLayout>
  <View style="@style/Divider" android:layout_marginTop="7dp"/>
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:text="Recommendation description" android:textColor="?BrushText"/>
  <TextView android:id="@+id/RecommendationItemDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="?BrushText" android:fontFamily="@string/font_family_light" android:layout_margin="5dp"/>
  <LinearLayout android:id="@+id/RecommendationItemDetailsContainer" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>