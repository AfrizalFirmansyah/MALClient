<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:orientation="vertical"
              android:background="@color/BrushFlyoutBackground">
      <ListView android:layout_width="wrap_content"
                android:layout_height="150dp" android:id="@+id/AnimeTagsDialogList"/>
      <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="10dp">
            <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/AnimeTagsDialogEditBox"/>
            <ImageButton android:id="@+id/AnimeTagsDialogAddTagButton" android:layout_width="40dp" android:layout_height="40dp" android:background="?android:selectableItemBackground" android:layout_marginStart="5dp" android:src="@drawable/icon_ok"/>

      </LinearLayout>
</LinearLayout>