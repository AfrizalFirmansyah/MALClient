<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/BrushDeepBackground"
      android:padding="5dp">
    <ListView android:layout_width="match_parent" android:divider="@color/Transparent" android:dividerHeight="15dp" android:layout_height="wrap_content" android:id="@+id/AnimeDetailsPageRelatedTabsList"/>
  </LinearLayout>
  <RelativeLayout android:id="@+id/AnimeDetailsPageRelatedTabLoadingOverlay" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/BrushLoading">
    <ProgressBar android:layout_width="wrap_content" android:indeterminateTint="@color/AccentColour" android:indeterminateTintMode="src_in" android:layout_height="wrap_content" android:indeterminate="true" android:layout_centerInParent="true"/>
  </RelativeLayout>
</RelativeLayout>